{
  "name": "reality-check-ai",
  "version": "1.0.0",
  "description": "AI-Powered Information Navigator for verifying claims and analyzing information",
  "main": "backend/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:build": "cd backend && npm run build",
    "frontend:build": "cd frontend && npm run build",
    "start": "npm run backend:start",
    "backend:start": "cd backend && npm start",
    "test": "npm run backend:test && npm run frontend:test",
    "backend:test": "cd backend && npm test",
    "frontend:test": "cd frontend && npm test",
    "setup": "npm run install:all && npm run setup:env",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ..",
    "setup:env": "cp backend/.env.example backend/.env",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "index-data": "cd backend && npm run index-data",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules"
  },
  "keywords": [
    "ai",
    "fact-checking",
    "information-verification",
    "elasticsearch",
    "vertex-ai",
    "conversational-ai",
    "hackathon"
  ],
  "author": "Reality Check AI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}